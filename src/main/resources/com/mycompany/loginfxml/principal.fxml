<BorderPane prefHeight="177.0" prefWidth="481.0" stylesheets="@stilo.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.loginfxml.Principal">
   <center>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCarta" mnemonicParsing="false" onAction="#verCarta" prefHeight="90.0" prefWidth="175.0" text="Ver Carta">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnComandas" mnemonicParsing="false" onAction="#verComandas" prefHeight="90.0" prefWidth="175.0" text="Ver Comandas">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnSalir" cancelButton="true" mnemonicParsing="false" onAction="#Salir" prefHeight="90.0" prefWidth="175.0" text="Salir">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </center>
   <bottom>
      <Label fx:id="info" maxWidth="1.7976931348623157E308" prefHeight="0.0" prefWidth="481.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Label>
   </bottom>
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Gestor de Comandas" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Text>
   </top>
</BorderPane>
